@model MediaCommMvc.Web.ViewModels.Forum.CreateTopicViewModel

@using (Html.BeginForm(MVC.Forum.CreateTopic(), FormMethod.Post, new { role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Subject)

        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control full-width" })

        @Html.ValidationMessageFor(m => m.Subject)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Text)

        @Html.TextAreaFor(m => m.Text, new { contenteditable="true", @class="editor form-control full-width" })

        @Html.ValidationMessageFor(m => m.Text)

    </div>

    <button type="submit" class="btn btn-primary">@Resources.Forums.CreateTopic</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    <script>

        $(function () {
             $('#Text').wysihtml5({
                toolbar: {
                    "font-styles": false, //Font styling, e.g. h1, h2, etc. Default true
                    "emphasis": true, //Italics, bold, etc. Default true
                    "lists": true, //(Un)ordered lists, e.g. Bullets, Numbers. Default true
                    "html": false, //Button which allows you to edit the generated HTML. Default false
                    "link": true, //Button to insert a link. Default true
                    "image": true, //Button to insert an image. Default true,
                    "color": false, //Button to change color of font
                    "blockquote": true, //Blockquote
                    "size": "sm" //default: none, other options are xs, sm, lg
                }
            });
        });
    </script>
}